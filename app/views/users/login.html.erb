content_for :extra_scripts do
  stylesheet_link_tag "users", "data-turbolinks-track" => true
end
%>
<%= form_for :user, html: {class: 'login-form'} do |f| %>
  <% if flash[:wrong_password] %>
    <div class="probs">
      <p class="prob">Check your credentials.</p>
    </div> <!-- .probs -->
  <% end %>
  <% unless flash[:creation_probs].blank? %>
    <div class="probs">
      <% flash[:creation_probs].each do |prob| %>
        <p><%= prob %></p>
      <% end %>
    </div> <!-- .probs -->
  <% end %>
  <%= f.text_field :username, placeholder: 'Username', id: 'username' %>
  <br />
  <%= f.password_field :password, placeholder: 'Password' %>
  <%= f.submit 'Login' %>
<% end %>
<a href="/auth/register/" class="under-the-form">Create an Account</a>
