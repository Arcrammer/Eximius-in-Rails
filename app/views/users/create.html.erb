%>
<%= form_for :user do |f| %>
  <% unless flash[:creation_probs].blank? %>
    <div class="probs">
      <% flash[:creation_probs].each do |prob| %>
        <p><%= prob %></p>
      <% end %>
    </div> <!-- .probs -->
  <% end %>
  <%= f.text_field :username, autocomplete: 'off', placeholder: 'Username', id: 'username' %>
  <%= f.email_field :email_address, autocomplete: 'off', placeholder: 'Email' %>
  <br />
  <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Again'%>
  <br />
  <%= f.label :selfie, 'Selfie:', class: 'file-label' %>
  <%= f.file_field :selfie, id: 'selfie', accept: 'image/jpg' %>
  <br />
  <%= f.label :cv, 'Résumé:', class: 'file-label' %>
  <%= f.file_field :cv, id: 'résumé', accept: 'application/pdf' %>
  <br />
  <%= f.label :is_employer, 'I\'m an employer', class: 'first-checkbox-label' %>
  <%= f.check_box :is_employer %>
  <br />
  <%= f.label :is_seeker, 'I\'m looking for jobs', class: 'last-checkbox-label' %>
  <%= f.check_box :is_seeker %>
  <br />
  <%= f.submit 'Continue' %>
<% end %>
<a href="/auth/login/" class="under-the-form">Login</a>
